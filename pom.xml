        <!--liquibase-->
        <liquibase.version>4.0.0</liquibase.version>
        <liquibase-maven-plugin.version>3.10.1</liquibase-maven-plugin.version>
        <liquibase-hibernate5.version>3.10.1</liquibase-hibernate5.version>
    </properties>

